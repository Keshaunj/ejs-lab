<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snackables Menu</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
    <h1>Best Teas Menu</h1>
    <% if (bestTeas && bestTeas.length > 0) { %>
        <ul>
            <% bestTeas.forEach(tea => { %>
                <li>
                    <strong><%= tea.name %></strong>: <%= tea.details %> (Price: $<%= tea.price %>)
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No best teas found.</p>
    <% } %>

    <h1>Snackables Menu</h1>
    <% if (snackables && snackables.length > 0) { %>
        <ul>
            <% snackables.forEach(snackable => { %>
                <li>
                    <strong><%= snackable.name %></strong>: <%= snackable.details %> (Price: $<%= snackable.price %>)
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No snackables found.</p>
    <% } %>

    <a href="/logTea">Back to Tea List</a> <!-- Link back to the main menu -->
</body>
</html>
